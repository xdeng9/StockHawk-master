<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sam_chordas.android.stockhawk.ui.StockDetailActivity">

    <android.support.v7.widget.GridLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:columnCount="3">

        <TextView
            android:id="@+id/bid_price"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:contentDescription="@string/bid_price_description"/>

        <TextView
            android:id="@+id/change"
            app:layout_columnWeight="1"
            android:gravity="end"
            android:textSize="20sp"
            android:contentDescription="@string/change_description"/>

        <TextView
            android:id="@+id/change_percent"
            app:layout_columnWeight="1"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:textSize="20sp"
            android:contentDescription="@string/change_percent_description"/>

        <TextView
            android:id="@+id/date"
            app:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:contentDescription="@string/date_description"/>

        <TextView
            android:text="Change"
            app:layout_columnWeight="1"
            android:gravity="end" />

        <TextView
            android:text="Change (%)"
            app:layout_columnWeight="1"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"/>
    </android.support.v7.widget.GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.design.widget.TabItem
            android:id="@+id/tab1"
            android:text="@string/tab1_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="1 month"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab2"
            android:text="@string/tab2_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="3 months"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab3"
            android:text="@string/tab3_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="6 months"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab4"
            android:text="@string/tab4_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="1 year"/>
    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

</LinearLayout>
